{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "types": [
      "node",
      "@types/node",
      "@nuxtjs/i18n",
      "pinia-plugin-persistedstate"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "ignoreDeprecations": "6.0"
  },
  "exclude": ["node_modules", "dist"]
}
